{
  "extends": ["eslint:recommended", "next/core-web-vitals", "prettier"],
  "globals": {
    "React": true,
    "JSX": true
  },
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true,
    "browser": true
  },
  "plugins": ["only-warn"],
  "ignorePatterns": [
    // Ignore dotfiles
    ".*.js",
    "node_modules/"
  ],
  "overrides": [
    {
      "files": ["*.js?(x)", "*.ts?(x)"]
    }
  ]
}
